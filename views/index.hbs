<form class="w3-container w3-round w3-card-4 w3-light-grey" action="/api/weather" method="POST">
    <div class="w3-center  w3-padding-16">
        <input class="w3-input w3-border w3-round-large" name="city" type="text" placeholder="Enter City name">
    </div>
    <label class="w3-center">
        {{{error}}}
        
    </label>
    <div class="w3-padding-16 w3-center">
        <input class="w3-button w3-teal w3-round-large" style="width:30%" type="submit" value="Go">
    </div>
</form>




